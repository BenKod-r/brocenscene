{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <body class="container bg-dark text-white" style="padding-top: 8rem; min-height: 1000px">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1 class="text-center mb-5">Cr√©ation Admin</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <div class="d-flex justify-content-center row">
                <button class="btn btn-success btn-xl js-scroll-trigger mt-3" type="submit">Valider</button>
            </div>
        {{ form_end(registrationForm) }}
    </body>
{% endblock %}

