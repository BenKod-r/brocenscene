{% extends "base.html.twig" %}
    {% block body %}
        <body class="bg-dark" id="page-top">

        {% include 'shop/nav_shop.html.twig' %}

        <section  class="container mb-5" style="padding-top: 8rem">
            <h1 class="text-center text-white">Produits disponibles</h1>
            <div class="product-item">
                <div class="product-item-title d-flex">
                    <div class="bg-faded p-5 d-flex justify-content-center rounded w-100">
                        <h2 class="section-heading mb-0">
                            <span class="section-heading-upper">From Around the World</span>
                        </h2>
                    </div>
                </div>
            </div>
            <div id="carouselExampleIndicators" class="carousel slide container" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="{{ asset('/img/portfolio/thumbnails/bg-2.jpg') }}" alt="">
                    </div>
                    <div class="carousel-item">
                        <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="{{ asset('/img/portfolio/thumbnails/1.jpg') }}" alt="">
                    </div>
                    <div class="carousel-item">
                        <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="{{ asset('/img/portfolio/thumbnails/2.jpg') }}" alt="">
                    </div>
                    <div class="carousel-item">
                        <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="{{ asset('/img/portfolio/thumbnails/3.jpg') }}" alt="">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="product-item">
                <div class="product-item-title d-flex mr-auto mb-5">
                    <div class="bg-faded p-5 rounded w-100">
                        <p class="mb-0">Our seasonal menu features delicious snacks, baked goods, and even full meals perfect for breakfast or lunchtime. We source our ingredients from local, oragnic farms whenever possible, alongside premium vendors for specialty goods.</p>
                    </div>
                </div>
            </div>
        </section>

        {% block footer %}
            {% include 'footer.html.twig' %}
        {% endblock %}

    </body>
    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/base.js') }}"></script>
    {% endblock %}
